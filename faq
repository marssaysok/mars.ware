    <script>
        function displayImage() {
            var imageContainer = document.getElementById("image-container");
            var displayedImage = document.getElementById("displayed-image");
            var centerText = document.querySelector(".center-text");
            var secondText = document.querySelector(".second-text");
            var buttonContainer = document.getElementById("button-container");

            displayedImage.src = "https://cdn.discordapp.com/attachments/1225291836898148364/1227004643855302697/Screen_Shot_2024-04-08_at_2.18.17_PM.png?ex=6626d41f&is=66145f1f&hm=41a4bb75227a07ffef4ac7ad7307f16ab1febad71cc49ab5ddf4f638d1f39c6d&";
            displayedImage.style.width = "600px";
            displayedImage.style.height = "auto";

            imageContainer.classList.add("fade-in");
            imageContainer.style.display = "block";

            centerText.classList.add("fade-out");

            secondText.classList.add("fade-out");

            buttonContainer.style.display = "block";
            buttonContainer.classList.remove("fade-out");
            buttonContainer.classList.add("fade-in");
        }

        function hideImageAndShowText() {
            var imageContainer = document.getElementById("image-container");
            var centerText = document.querySelector(".center-text");
            var secondText = document.querySelector(".second-text");
            var buttonContainer = document.getElementById("button-container");

            imageContainer.classList.remove("fade-in");
            imageContainer.classList.add("fade-out");

            centerText.classList.remove("fade-out");
            centerText.classList.add("fade-in");

            secondText.classList.remove("fade-out");
            secondText.classList.add("fade-in");

            buttonContainer.classList.remove("fade-in");
            buttonContainer.classList.add("fade-out");

            setTimeout(function() {
                imageContainer.style.display = "none";
                imageContainer.classList.remove("fade-out");
            }, 500);
        }

        function goBack() {
            window.location.href = "index.html";
        }
    </script>
